declare 
a number(5):=&1;
b number(5):=&2;
c number(5):=&3;
begin
if a>b and a>c then
dbms_output.put_line('a is largest');
elsif b>a and b>c then
dbms_output.put_line('b is largest');
elsif c>a and c>b then
dbms_output.put_line('c is largest');
else
dbms_output.put_line('all are euqal');
end if;
end;
/
